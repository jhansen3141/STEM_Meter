<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scanListItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/scanRSSITextView"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="21dp"
        android:textColor="@android:color/black"

        />

    <ProgressBar
        android:id="@+id/rssiProgressBar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="false"
        android:progress="75"
        android:max="100"
        android:secondaryProgress="100"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:progressDrawable="@drawable/rssi_indicator" />


    <TextView
        android:id="@+id/scanItemTextView"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_gravity="start"
        android:layout_toEndOf="@+id/rssiProgressBar"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_marginStart="2dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/scanAddressTextView"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_gravity="start"
        android:layout_toEndOf="@+id/rssiProgressBar"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_below="@+id/scanItemTextView"
        />


    <ImageButton
        android:id="@+id/connectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_centerVertical="true"
        android:background="@drawable/rectangle_button"
        android:contentDescription="Connect" />

    <TextView
        android:id="@+id/scanConnectTextView"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/rssiProgressBar"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:text="Connect"
        android:textColor="@android:color/black"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="167dp"
        android:layout_marginBottom="8dp"
        />

</RelativeLayout>