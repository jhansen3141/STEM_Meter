<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scanListItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/scanItemTextView"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_gravity="start"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_marginStart="2dp"
        />

    <TextView
        android:id="@+id/scanRSSITextView"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textSize="20sp"
        android:layout_below="@+id/scanItemTextView"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_marginStart="2dp"
        />

    <TextView
        android:id="@+id/scanAddTextView"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textSize="20sp"
        android:layout_below="@+id/scanRSSITextView"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_marginStart="2dp"
        />

    <ImageButton
        android:id="@+id/connectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:src="@drawable/connect_button"
        android:focusableInTouchMode="false"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:background="#0000"
        android:contentDescription="Connect" />

</RelativeLayout>