<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/StartSDText"
            android:layout_marginTop="12dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:text="Start SD Log"
            android:layout_height="wrap_content"
            />

        <ToggleButton
            android:id="@+id/PlayPauseBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:focusable="false"
            android:background="@drawable/ic_play_arrow_black_24dp"
            android:checked="false"
            android:textOn=""
            android:textOff=""
            android:focusableInTouchMode="false"
            android:layout_toLeftOf="@+id/StartSDText"
            />


        <TextView
            android:id="@+id/ZeroSensorText"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:text="Zero Sensor"
            android:layout_height="wrap_content"
            android:layout_below="@+id/StartSDText"
            />

        <ImageButton
            android:id="@+id/ZeroBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:focusable="false"
            android:src="@drawable/ic_exposure_zero_black_24dp"
            android:focusableInTouchMode="false"
            android:layout_toLeftOf="@+id/StartSDText"
            android:layout_below="@+id/StartSDText"
            />
    </RelativeLayout>

</LinearLayout>